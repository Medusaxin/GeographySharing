<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/tob_actionbar"/>
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_issue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="10dp"
            android:text="选择发布类型："
            android:textStyle="bold"
            android:textColor="#f44336"
            android:textSize="20sp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_issue"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_issue"
            android:background="@drawable/bg_edit"
            android:entries="@array/geology_spinner" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/issue_detail_pic"
            android:layout_width="@dimen/dimen_490dp"
            android:layout_height="@dimen/dimen_360dp"
            android:layout_marginBottom="@dimen/dimen_25dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_weight="5"
            android:background="@drawable/img_text_quyangzuan"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/issue_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="上传设备照片" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="设备名称 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入名称"
            android:textColorHint="#fa88"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="购买日期 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_buy_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入购买日期"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="空置时间 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_free_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入空置时间"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="购买价格 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入购买价格"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="到期年限 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_over_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入到期年限"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="出租价格 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入出租价格"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="性能参数 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入性能参数"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="设备备注 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请添加备注"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="设备地点 :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_38dp" />

        <EditText
            android:id="@+id/issue_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="请输入地址信息"
            android:textColorHint="#fa88" />
    </LinearLayout>

    <Button
        android:id="@+id/issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button"
        android:text="发布设备"
        android:textSize="@dimen/dimen_40dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>